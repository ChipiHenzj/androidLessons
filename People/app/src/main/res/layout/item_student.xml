<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/app_bar"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_person_outline_24dp"
            android:id="@+id/imageView_add_student"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[student_name]"
            android:id="@+id/textView_name"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageView_add_student"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[student_surname]"
            android:id="@+id/textView_surname"
            android:layout_toRightOf="@+id/textView_name"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:id="@+id/textView_student"
            android:textSize="10sp"
            android:layout_marginLeft="35dp"
            android:gravity="bottom"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/textView_name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>


